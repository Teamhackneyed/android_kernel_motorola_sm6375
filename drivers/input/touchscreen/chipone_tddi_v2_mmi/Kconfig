config TOUCHSCREEN_CHIPONE_V2_MMI
	tristate "CHIPONE TDDI V2 Touchscreen"
	default n
	help
	  Say Y here if you have a Chipone flash touchscreen connected
	  to your system by SPI bus.

	  If unsure, say N.

config TOUCHSCREEN_CHIPONE_V2_MMI_ESD
	bool "ESD detection"
	depends on TOUCHSCREEN_CHIPONE_V2_MMI
	default n
	help
	  Say Y here if you want to have ESD detection support.

	  If unsure, say N.

